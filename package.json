		"@types/node": "20.11.20",
		"@types/prompts": "2.4.9",
		"@types/yargs": "17.0.32",
		"@typescript-eslint/eslint-plugin": "5.62.0",
		"@typescript-eslint/parser": "5.62.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"jest": "29.7.0",
		"jest-when": "3.6.0",

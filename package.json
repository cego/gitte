{
	"name": "@cego/gitte",
	"version": "1.4.1",
	"description": "Git automation and action execution across a list of projects",
	"main": "bin/main.js",
	"bin": {
		"gitte": "bin/main.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cego/gitte.git"
	},
	"keywords": [
		"git",
		"automation",
		"action",
		"execution",
		"microservice"
